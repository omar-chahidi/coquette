{% extends 'base.html.twig' %}

{% block body %}
    <h1>Votre pannier</h1>
    
    {% if items | length > 0 %}
        {# table.table #}
        <table class="table">
            {# thead>tr>th*5 #}
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Remise</th>
                    <th>Prix avec remise</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    {# tr>td*5 #}
                    <tr>
                        <td>{{ item.produit.article.titre }}</td>
                        <td>{{ item.produit.article.prix }}  €</td>
                        <td>{{ item.produit.article.remise }} %</td>
                        <td>{{ item.produit.article.prix-(item.produit.article.prix * item.produit.article.remise)/100 }}  €</td>
                        <td>{{ item.quantite }}</td>
                        <td>{{ (item.produit.article.prix-(item.produit.article.prix * item.produit.article.remise)/100) * item.quantite }}  €</td>
                        <td>
                            {# a.btn.btn-danger.btn-sm #}
                            <a href="{{ path('chariot_supprimer', {'id': item.produit.id}) }}" class="btn btn-danger btn-sm">
                                <!-- https://icons.getbootstrap.com/ -->
                                <svg class="bi bi-trash-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                {# tr>td*3 #}
                <tr>
                    <td colspan="5" class="text-right">Total : </td>
                    <td>{{ total }}  €</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div>
            <a href="{{ path('home') }}" class="btn btn-info">Continuer vos achats </a>
        </div>
    {% else  %}
        <h3>Pannier vide !</h3>
    {% endif %}
{% endblock %}
