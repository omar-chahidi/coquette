{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


    <h1>Vos commandes</h1>
    <br>

    {# table.table #}
    <table class="table" style="text-align: center">
        {# thead>tr>th*5 #}
