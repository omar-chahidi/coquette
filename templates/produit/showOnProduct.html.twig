    <article>
        <h2>Article n° {{ unArticle.id }}</h2>
        <h3>{{ unArticle.titre }}</h3>
        <div class="metadata">Ecrit le {{ unArticle.createdAt | date ('Y/m/d')}} dans la catégorie Homme</div>
        <div class="container">
            <div class="row">
                {% for photo in articlePhotos %}
                    <div>
                        <a href="{{ photo.titrePhoto }}" class="thumbnail" >
                            <img src="{{ photo.titrePhoto }}" alt="{{ photo.titrePhoto }}" width="200" height="200"/>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
            <p>{{ unArticle.description | raw}}</p>
            <hr>
            <p>{{ unArticle.motRecherche }}</p>

            <table class="table table-bordered table-striped">
                <tr>
                    <th>Article</th>
                    <th>Taille</th>
                    <th>Couleur</th>
                    <th>Stock disponible</th>
                    <th>Prix unitaire</th>
                    <th>Action</th>
                </tr>
                {% for variante in articleVariante %}
                    <tr>
                        <td>{{ variante.article.titre }}</td>
                        <td>{{ variante.taille}}</td>
                        <td>{{ variante.couleur }}</td>
                        <td>{{ variante.stocke }}</td>
                        <td>{{ variante.article.prix }}</td>
                        <td>
