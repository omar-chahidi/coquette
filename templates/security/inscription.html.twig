{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription Sur le site Coquette</h1>

    {{ form_start(form) }}
    {# {{ form_widget(form) }} #}

    {{ form_row(form.nomUtilisateur, {'label': 'Nom', 'attr': {'placeholder': 'Nom ...'}}) }}
    {{ form_row(form.prenom, {'label': 'Prénom', 'attr': {'placeholder': 'Prénom ...'}}) }}
    {{ form_row(form.telephone, {'label': 'Téléphone', 'attr': {'placeholder': 'Téléphone ...'}}) }}
    {{ form_row(form.adresse, {'label': 'Adresse', 'attr': {'placeholder': 'Adresse ...'}}) }}
    {{ form_row(form.ville, {'label': 'Ville'}) }}
    {{ form_row(form.dateNaissance, {'label': 'Date de naissance'}) }}
    {{ form_row(form.email, {'label': 'Adresse E-mail', 'attr': {'placeholder': 'E-amil ...'}}) }}
    {{ form_row(form.mdp, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe ...'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation mot de passe', 'attr': {'placeholder': 'Répétez votre mot de passe ...'}}) }}

    {# button:submit.btn.btn-success #}
    <button type="submit" class="btn btn-success">
        {% if updateMode %}
            Enregistrer Modification
        {% else %}
            Inscription !
        {% endif %}
    </button>
    {{ form_end(form) }}
{% endblock %}