{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion !</h1>

    <form action="{{ path('security_login')}}" method="post">
        {# div.form-group #}
        <div class="form-group">
            {# input:text.form-control #}
            <input placeholder="Adresse email ..." required name="_username" type="text" name="" id="" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe ..." required name="_password" type="password" name="" id="" class="form-control">
        </div>

        <div class="form-group">
            {# button:submit.btn.btn-success #}
            <button type="submit" class="btn btn-success">Connexion !</button>
        </div>
    </form>

{% endblock %}